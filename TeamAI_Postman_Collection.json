        },
        {
          "name": "Get Project by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/projects/:projectId",
              "host": ["{{base_url}}"],
              "path": ["projects", ":projectId"],
              "variable": [
                {
                  "key": "projectId",
                  "value": "project-uuid-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tasks",
              "host": ["{{base_url}}"],
              "path": ["tasks"]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Разработать главный экран приложения\",\n  \"description\": \"Создать UI главного экрана с навигацией, проектами и AI агентом\",\n  \"projectId\": \"project-uuid-here\",\n  \"priority\": \"HIGH\",\n  \"deadline\": \"2025-11-15T18:00:00Z\",\n  \"requiredSkills\": [\"Flutter\", \"Dart\", \"UI/UX\"]\n}"
