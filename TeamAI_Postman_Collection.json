              "raw": "{\n  \"name\": \"TeamAI Mobile App\",\n  \"description\": \"Разработка мобильного приложения для управления командами с AI агентом\",\n  \"category\": \"Development\",\n  \"startDate\": \"2025-11-07T00:00:00Z\",\n  \"endDate\": \"2025-12-31T23:59:59Z\",\n  \"memberIds\": []\n}"
            },
            "url": {
              "raw": "{{base_url}}/projects",
              "host": ["{{base_url}}"],
              "path": ["projects"]
