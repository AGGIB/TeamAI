                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"COMPLETED\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tasks/:taskId/status",
              "host": ["{{base_url}}"],
              "path": ["tasks", ":taskId", "status"],
              "variable": [
                {
                  "key": "taskId",
                  "value": "task-uuid-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "AI",
      "item": [
        {
          "name": "AI Distribute Tasks",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"projectId\": \"project-uuid-here\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/ai/distribute-tasks",
              "host": ["{{base_url}}"],
              "path": ["ai", "distribute-tasks"]
            }
          }
        },
        {
          "name": "AI Chat",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
